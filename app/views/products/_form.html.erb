<%= form_for @product, :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :desription %><br />
    <%= f.text_field :desription %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= file_field_tag 'image' %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= collection_select(:product, :gender_id, Gender.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :style %><br />
    <%= collection_select(:product, :style_id, Style.all, :id, :style) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
